<script type="text/javascript">
    $(function(){
        if($(".datePicker")){
            $(".datePicker").datetimepicker({timepicker:false,format:'d/m/Y'});
        }
        if($(".dateTimePicker")){
            $(".dateTimePicker").datetimepicker({format:'d/m/Y H:i'});
        }
    });
</script>