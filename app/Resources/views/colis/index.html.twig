{% extends 'base.html.twig' %}

{% block body %}
    <h1>Colis list</h1>

    <table class="table striped bordered hovered" id="interventions">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coli in colis %}
            <tr>
                <td><a href="{{ path('colis_show', { 'id': coli.id }) }}">{{ coli.id }}</a></td>
                <td>{{ coli.libelle }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('colis_show', { 'id': coli.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('colis_edit', { 'id': coli.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('colis_new') }}"><span class="icon-plus fg-green large"></span></a>
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/jquery-impromptu.css') }}" rel="stylesheet">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/app/js/modal/jquery-impromptu.js') }}"></script>
    <script src="{{ asset('bundles/app/js/modal/openPrompt.js') }}"></script>
{% endblock %}